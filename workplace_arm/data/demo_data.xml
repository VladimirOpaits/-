            <field name="workplace_id" ref="workplace_1"/>
            <field name="status">ready</field>
            <field name="customer_order_number">251</field>
            <field name="allowed_operators" eval="[(4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
