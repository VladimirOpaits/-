            <field name="location">Line 1</field>
            <field name="capacity">2</field>
            <field name="status">available</field>
            <field name="operator_ids" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="workplace_2" model="workplace.workplace">
            <field name="name">Workplace 2</field>
            <field name="code">WP002</field>
