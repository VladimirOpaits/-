<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_defect_wizard_form" model="ir.ui.view">
            <field name="name">workplace.defect.wizard.form</field>
            <field name="model">workplace.defect.wizard</field>
            <field name="arch" type="xml">
                <form string="Defect Reason">
                    <group>
                        <field name="task_id" readonly="1"/>
                        <field name="defect_reason" placeholder="Please describe the reason for the defect..." 
                               required="1" nolabel="1"/>
                    </group>
                    <footer>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                        <button string="Confirm Defect" name="action_confirm_defect" 
                                type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_defect_wizard" model="ir.actions.act_window">
            <field name="name">Defect Reason</field>
            <field name="res_model">workplace.defect.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <record id="view_cancel_wizard_form" model="ir.ui.view">
            <field name="name">workplace.cancel.wizard.form</field>
            <field name="model">workplace.cancel.wizard</field>
            <field name="arch" type="xml">
                <form string="Cancel Task">
                    <group>
                        <field name="task_id" readonly="1"/>
                        <field name="cancel_reason" placeholder="Please describe the reason for cancelling this task..." 
                               required="1" nolabel="1"/>
                    </group>
                    <footer>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                        <button string="Confirm Cancel" name="action_confirm_cancel" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_cancel_wizard" model="ir.actions.act_window">
            <field name="name">Cancel Task</field>
            <field name="res_model">workplace.cancel.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
