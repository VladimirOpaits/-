<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_workplace_form" model="ir.ui.view">
            <field name="name">workplace.workplace.form</field>
            <field name="model">workplace.workplace</field>
            <field name="arch" type="xml">
                <form string="Workplace">
                    <header>
                        <button name="action_set_available" string="Set Available" type="object" 
                                class="oe_highlight" invisible="status == 'available'"/>
                        <button name="action_set_occupied" string="Set Occupied" type="object" 
                                class="oe_warning" invisible="status == 'occupied'"/>
                        <button name="action_set_maintenance" string="Set Maintenance" type="object" 
                                class="oe_warning" invisible="status == 'maintenance'"/>
                        <button name="action_set_inactive" string="Set Inactive" type="object" 
                                class="oe_secondary" invisible="status == 'inactive'"/>
                        <field name="status" widget="statusbar" statusbar_visible="available,occupied,maintenance"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Workplace Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="location"/>
                                <field name="capacity"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="equipment_ids" widget="many2many_tags"/>
                                <field name="operator_ids" widget="many2many_tags"/>
                                <field name="current_operator_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Manufacturing Orders">
                                <field name="manufacturing_order_ids" readonly="1"/>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_workplace_tree" model="ir.ui.view">
            <field name="name">workplace.workplace.tree</field>
            <field name="model">workplace.workplace</field>
            <field name="arch" type="xml">
                <list string="Workplaces">
                    <field name="name"/>
                    <field name="code" width="120"/>
                    <field name="location"/>
                    <field name="capacity" width="150" optional="hide"/>
                    <field name="status" width="150"/>
                </list>
            </field>
        </record>

        <record id="view_workplace_search" model="ir.ui.view">
            <field name="name">workplace.workplace.search</field>
            <field name="model">workplace.workplace</field>
            <field name="arch" type="xml">
                <search string="Search Workplaces">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="location"/>
                    <separator/>
                    <filter string="Available" name="available" domain="[('status', '=', 'available')]"/>
                    <filter string="Occupied" name="occupied" domain="[('status', '=', 'occupied')]"/>
                    <filter string="Maintenance" name="maintenance" domain="[('status', '=', 'maintenance')]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_workplace" model="ir.actions.act_window">
            <field name="name">Workplaces</field>
            <field name="res_model">workplace.workplace</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first workplace!
                </p>
                <p>
                    Manage your workplaces and their ARM integration.
                </p>
            </field>
        </record>
    </data>
</odoo>



